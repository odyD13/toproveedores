---
// Product Card Component - Tarjeta individual de producto
export interface Props {
  name: string;
  price?: string;
  image: string;
  description?: string;
}

const { name, price, image, description } = Astro.props;
---

<div class="bg-dark-secondary rounded-xl border border-dark-accent hover:border-gold/50 transition-all duration-300 overflow-hidden group">
  <div class="relative overflow-hidden">
    <img 
      src={image} 
      alt={name}
      class="w-full h-48 sm:h-56 md:h-64 object-cover group-hover:scale-105 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-bg/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  
  <div class="p-4 sm:p-6">
    <h3 class="text-lg sm:text-xl font-semibold text-white mb-2 group-hover:text-gold transition-colors line-clamp-1">
      {name}
    </h3>
    
    {description && (
      <p class="text-gray-400 text-xs sm:text-sm mb-3 sm:mb-4 line-clamp-2">
        {description}
      </p>
    )}
    
    <div class="flex flex-col sm:flex-row gap-3 sm:items-center sm:justify-between">
      {price && (
        <span class="text-xl sm:text-2xl font-bold text-gold">
          {price}
        </span>
      )}
      
      <button class="w-full sm:w-auto bg-gold/10 text-gold px-3 sm:px-4 py-2 rounded-lg hover:bg-gold hover:text-dark-bg transition-all duration-300 text-sm sm:text-base font-medium">
        Ver Detalles
      </button>
    </div>
  </div>
</div>